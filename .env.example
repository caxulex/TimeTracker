# ===================================
# TIME TRACKER - ENVIRONMENT TEMPLATE
# ===================================
# Copy this file to .env and customize values
# All services run in Docker containers for full independence

# Database Configuration (Docker PostgreSQL on port 5434)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5434/time_tracker

# Redis Configuration (Docker Redis on port 6379)
REDIS_URL=redis://localhost:6379/0

# JWT Configuration (CHANGE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
APP_NAME=Time Tracker
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# CORS Configuration (Add your frontend domain)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Admin Configuration (CHANGE IN PRODUCTION!)
FIRST_SUPER_ADMIN_EMAIL=admin@yourdomain.com
FIRST_SUPER_ADMIN_PASSWORD=change-this-secure-password

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
