# Time Tracker Environment Configuration
# Copy this file to .env and fill in the values
# SEC-001: NEVER commit .env file to version control

# Application
APP_NAME=Time Tracker
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql+asyncpg://postgres:YOUR_DB_PASSWORD@localhost:5434/time_tracker
DATABASE_URL_TEST=postgresql+asyncpg://postgres:YOUR_DB_PASSWORD@localhost:5433/time_tracker_test

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Security - REQUIRED: Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_THIS_GENERATE_A_SECURE_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Update for production
ALLOWED_ORIGINS=["http://localhost:5173","http://localhost:3000"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# Admin Setup - REQUIRED: Use strong credentials
FIRST_SUPER_ADMIN_EMAIL=admin@yourdomain.com
FIRST_SUPER_ADMIN_PASSWORD=CHANGE_THIS_USE_STRONG_PASSWORD

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_AUTH_REQUESTS_PER_MINUTE=5

# Request Limits
MAX_UPLOAD_SIZE_MB=10
MAX_REQUEST_SIZE_MB=10
REQUEST_TIMEOUT_SECONDS=30

# Password Hashing
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Upload
UPLOAD_DIR=uploads/

# Email (Optional)
# SMTP_SERVER=smtp.yourdomain.com
# SMTP_PORT=587
# SMTP_USERNAME=
# SMTP_PASSWORD=

# External APIs (Optional)
# JIRA_BASE_URL=
# JIRA_EMAIL=
# JIRA_API_TOKEN=
# ASANA_ACCESS_TOKEN=
# TRELLO_API_KEY=
# TRELLO_TOKEN=
